{
  "services": [
    {
      "image": "nginx:alpine",
      "name": "frontend",
      "listen": 80,
      "public_listen": 80,
      "network_id": "app_network"
    },
    {
      "image": "node:alpine",
      "name": "backend",
      "listen": 3000,
      "network_id": "app_network"
    },
    {
      "image": "postgres:alpine",
      "name": "db",
      "listen": 5432,
      "network_id": "app_network",
      "volume_id": "db_data"
    }
  ],
  "volumes": [{ "name": "db_data" }],
  "networks": [{ "name": "app_network" }]
}
